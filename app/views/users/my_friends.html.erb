<% if @friendships.size > 0 %>
    <table class="table table-striped">
        <thead>
            <tr>
                <th colspan="3" class="page-header">
                    <h2>My Friends</h2>
                </th>
            </tr>
            <tr>
                <th>Name</th>
                <th>email</th>
                <th>Actions</th>
            </tr>
        </thead>
    
        <tbody>
        <% @friendships.each do |friend| %>
            <tr>
                <td><%= friend.full_name %></td>
                <td><%= friend.email %></td>
                <td><%= link_to 'Veiw Profile', user_path(friend), class: "btn btn-xs btn-info" %>
                    <%= link_to 'Remove', friendships_path(friend),
                        :method => :delete, :data => { :confirm => 'Are you sure?' },
                        :class => 'btn btn-xs btn-warning' %>
                </td>
            </tr>
        <% end %>
        </tbody>
    </table>
<% else %>
    <div class="row col-lg-12">
        <p class="lead">you don&acute;t have any friends :(</p>
    </div>
<% end %>

<%= render 'friends/lookup' %>